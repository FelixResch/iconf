doctype html
html
    title Dashboard
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/static/css/w3.css', type='text/css')
    link(rel='stylesheet', href='/static/css/font-awesome.min.css', type='text/css')
    script(src='/static/js/jquery.min.js')
    script(src='/static/js/app.dashboard.js')
    body.w3-light-grey
        // Top container
        .w3-bar.w3-top.w3-black.w3-large(style='z-index:4')
            button.w3-bar-item.w3-button.w3-hide-large.w3-hover-none.w3-hover-text-light-grey(onclick='menu_open();')
                i.fa.fa-bars
                |   Menu
            span.w3-bar-item.w3-right iDHCP/iDNS Control Center
        // Sidebar/menu
        nav#mySidebar.w3-sidebar.w3-collapse.w3-white(style='z-index:3;width:300px;')
            br
            .w3-container.w3-row
                .w3-col.s12.w3-bar
                    span
                        | Welcome,&nbsp;
                        strong= .Visitor.Name
                    br
                    a.w3-bar-item.w3-button(href='#')
                        i.fa.fa-user
                    a.w3-bar-item.w3-button(href='/leave')
                        i.fa.fa-sign-out
            hr
            .w3-container
                h5 Dashboard
            .w3-bar-block
                a.w3-bar-item.w3-button.w3-padding-16.w3-hide-large.w3-dark-grey.w3-hover-black(href='#', onclick='menu_close()', title='close menu')
                    i.fa.fa-remove.fa-fw
                    |   Close Menu
                a.w3-bar-item.w3-button.w3-padding.w3-blue(href='/dashboard')
                    i.fa.fa-dashboard.fa-fw
                    |   Dashboard
                a.w3-bar-item.w3-button.w3-padding(href='/dashboard/devices')
                    i.fa.fa-laptop.fa-fw
                    |   Devices
                a.w3-bar-item.w3-button.w3-padding(href='/dashboard/servers')
                    i.fa.fa-server.fa-fw
                    |   Servers
                a.w3-bar-item.w3-button.w3-padding(href='/dashboard/records')
                    i.fa.fa-map-marker.fa-fw
                    |   Name Records
                a.w3-bar-item.w3-button.w3-padding(href='/dashboard/games')
                    i.fa.fa-gamepad.fa-fw
                    |   Games
                a.w3-bar-item.w3-button.w3-padding(href='/dashboard/admin')
                    i.fa.fa-users.fa-fw
                    |   Admin
                a.w3-bar-item.w3-button.w3-padding(href='/dashboard/settings')
                    i.fa.fa-cog.fa-fw
                    |   Settings
                br
                br
        // Overlay effect when opening sidebar on small screens
        #myOverlay.w3-overlay.w3-hide-large.w3-animate-opacity(onclick='menu_close()', style='cursor:pointer', title='close side menu')
        // !PAGE CONTENT!
        .w3-main(style='margin-left:300px;margin-top:43px;')
            // Header
            header.w3-container(style='padding-top:22px')
                h5
                    b
                        i.fa.fa-dashboard
                        |  Dashboard
            .w3-row-padding.w3-margin-bottom
                .w3-quarter
                    .w3-container.w3-red.w3-padding-16
                        .w3-left
                            i.fa.fa-laptop.w3-xxxlarge
                        .w3-right
                            h3#activeDevices
                        .w3-clear
                        h4 Devices
                .w3-quarter
                    .w3-container.w3-blue.w3-padding-16
                        .w3-left
                            i.fa.fa-server.w3-xxxlarge
                        .w3-right
                            h3#activeServers
                        .w3-clear
                        h4 Servers
                .w3-quarter
                    .w3-container.w3-teal.w3-padding-16
                        .w3-left
                            i.fa.fa-map-marker.w3-xxxlarge
                        .w3-right
                            h3#activeRecords
                        .w3-clear
                        h4 Name Records
                .w3-quarter
                    .w3-container.w3-orange.w3-text-white.w3-padding-16
                        .w3-left
                            i.fa.fa-gamepad.w3-xxxlarge
                        .w3-right
                            h3#activeGames
                        .w3-clear
                        h4 Games
            .w3-panel
                .w3-row-padding(style='margin:0 -16px')
                    .w3-row
                        // TODO implement with sse or websockets
                        h5 Feed
                        table.w3-table.w3-striped.w3-white
                            tr
                                td
                                    i.fa.fa-user.w3-text-blue.w3-large
                                td New record, over 90 views.
                                td
                                    i 10 mins
                            tr
                                td
                                    i.fa.fa-bell.w3-text-red.w3-large
                                td Database error.
                                td
                                    i 15 mins
                            tr
                                td
                                    i.fa.fa-users.w3-text-yellow.w3-large
                                td New record, over 40 users.
                                td
                                    i 17 mins
                            tr
                                td
                                    i.fa.fa-comment.w3-text-red.w3-large
                                td New comments.
                                td
                                    i 25 mins
                            tr
                                td
                                    i.fa.fa-bookmark.w3-text-blue.w3-large
                                td Check transactions.
                                td
                                    i 28 mins
                            tr
                                td
                                    i.fa.fa-laptop.w3-text-red.w3-large
                                td CPU overload.
                                td
                                    i 35 mins
                            tr
                                td
                                    i.fa.fa-share-alt.w3-text-green.w3-large
                                td New shares.
                                td
                                    i 39 mins
